// A collection of reusable RDL entities for the CSR pool generation

// A Status register is Read-only
`define DEF_SREG(name) \
    reg CSR_S``name { \
        default hw = rw; \
        default sw = r;

// A Control register is Read-Write
`define DEF_CREG(name) \
    reg CSR_C``name { \
        default hw = r; \
        default sw = rw;

// Getters are used to have a consistent naming
`define REF_SREG(name) CSR_S``name
`define REF_CREG(name) CSR_C``name
